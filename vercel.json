{
  "version": 2,
  "builds": [
    {
      "src": "frontend/**",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build --prefix frontend" 
      }
    },
    {
      "src": "backend/service.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 10 
      }
    }
  ],
  "routes": [
    
    {
      "src": "/api/(.*)",
      "dest": "backend/service.js" 
    },

    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],

  "installCommand": "npm install --prefix frontend && npm install --prefix backend",
  "buildCommand": "npm run build --prefix frontend"
}